{% extends'TroiswaPublicBundle::layout.html.twig' %}


{% block title %}
    {{ parent() }} film
{% endblock %}

{% block body %}

    <div class="container">

        <div class="row">

            <div class="col-lg-12">
                <h1 class="page-header">{{  film.titre }}
                    <small></small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="{{  path('troiswa_public_page') }}">Home</a>
                    </li>
                    <li><a href="{{  path('troiswa_public_films') }}">Films</a>
                    </li>
                    <li class="active">{{  film.titre }}</li>
                </ol>
            </div>

        </div>


        <div class="row">

            <div class="col-md-8">
                <img class="img-responsive" src="http://placehold.it/750x500">
            </div>

            <div class="col-md-4">
                <h3>{{  film.titre }}</h3>
                <p>{{  film.description }}</p>
                <h3>Project Details</h3>
                <ul>
                    <li>Lorem Ipsum</li>
                    <li>Dolor Sit Amet</li>
                    <li>Consectetur</li>
                    <li>
                        <span id="raty" data-score="{{  film.note }}">

                        </span>
                    </li>
                </ul>
            </div>

        </div>


        <div class="row">

            <div class="col-lg-12">
                <h3 class="page-header">Related Projects</h3>
            </div>

            <div class="col-sm-3 col-xs-6">
                <a href="#">
                    <img class="img-responsive img-customer" src="http://placehold.it/500x300">
                </a>
            </div>

            <div class="col-sm-3 col-xs-6">
                <a href="#">
                    <img class="img-responsive img-customer" src="http://placehold.it/500x300">
                </a>
            </div>

            <div class="col-sm-3 col-xs-6">
                <a href="#">
                    <img class="img-responsive img-customer" src="http://placehold.it/500x300">
                </a>
            </div>

            <div class="col-sm-3 col-xs-6">
                <a href="#">
                    <img class="img-responsive img-customer" src="http://placehold.it/500x300">
                </a>
            </div>

        </div>

    </div>
    <!-- /.container -->
{% endblock %}

{% block javascript %}
    <script src="{{ asset("js/lib/jquery.raty.js") }}" type="text/javascript"></script>
    <script type="text/javascript">

        $(document).ready(function(){

            // Commande pour afficher les notes etoil√©es
            $('#raty').raty({
                path:"{{ app.request.basePath }}/js/lib/images",

                score: function() {
                    return $(this).attr('data-score');
                },

                readOnly: true
            })

        });

    </script>
{% endblock %}