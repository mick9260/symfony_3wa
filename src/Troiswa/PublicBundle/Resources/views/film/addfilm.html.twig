{% block title %}
    {{ parent() }} film
{% endblock %}

{% block body %}

    {#AVANT#}
    {#{{ form(formFilm)}}#}



    {#APRES : Pour insérer du css#}
    <br>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            {{ form_start(formFilm,{'attr':{'novalidate':'novalidate'}}) }}


            {#titre#}
