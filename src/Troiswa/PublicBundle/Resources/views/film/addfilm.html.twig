            {#synopsis#}
            <div class="form-group">
                {{ form_label(formFilm.synopsis,'Synopsis')}}
                {# <label>Prénom</label> #}

                {{ form_widget(formFilm.synopsis,{'attr':{'class':'form-control', 'placeholder':"Synopsis"}}) }}
