                {{ form_label(formFilm.datecreation, 'Date de création')}}
                {# <label>datenaissance</label> #}

                {{ form_widget(formFilm.datecreation,{'attr':{'class':'form-control'}}) }}
                {# <input type="text"> #}

                {{ form_errors(formFilm.datecreation)}}
            </div>

            {#note#}
            <div class="form-group">
                {{ form_label(formFilm.note,'Note')}}
                {# <label>Prénom</label> #}

                {{ form_widget(formFilm.note,{'attr':{'class':'form-control', 'placeholder':"note"}}) }}
